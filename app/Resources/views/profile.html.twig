{% extends 'layout/dashboard.html.twig' %}

{% set title = 'Profile' %}

{% block window_title %}
    Update {{ title }} |
{% endblock %}

{% block page_title %}
    {{ title }} <small>Update</small>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    <li class="active">{{ title }}</li>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body">
            {{ form_start(form) }}
            {{ form_row(form.oldPassword, {'lr': 22}) }}
            {{ form_row(form.username, {'lr': 23}) }}
            {{ form_row(form.avatar, {'lr': 23}) }}
            {{ form_row(form.newPassword, {'lr': 22}) }}
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button class="btn btn-flat btn-primary" type="submit">Update</button>
                    <button class="btn btn-flat btn-default" type="reset">Reset</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}



