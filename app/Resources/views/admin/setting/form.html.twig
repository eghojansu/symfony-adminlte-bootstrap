{% extends 'layout/dashboard.html.twig' %}

{% set title = 'Setting' %}

{% block window_title %}
    {{ title }} |
{% endblock %}

{% block page_title %}
    {{ title }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    <li class="active">{{ title }}</li>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body">
            {{ form_start(form) }}
            <p class="text-danger"><strong>Application Config</strong></p>
            {{ form_row(form.app_name) }}
            {{ form_row(form.app_alias) }}
            {{ form_row(form.app_description) }}
            {{ form_row(form.app_owner) }}
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-flat btn-primary">Save</button>
                    <a href="{{ path('dashboard') }}" class="btn btn-flat btn-default">Cancel</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
