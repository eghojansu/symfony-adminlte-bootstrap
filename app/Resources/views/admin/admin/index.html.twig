{% extends 'layout/dashboard.html.twig' %}

{% set title = 'Data Admin' %}

{% block window_title %}
    {{ title }} |
{% endblock %}

{% block page_title %}
    {{ title }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    <li class="active">{{ title }}</li>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <div class="btn-grup pull-right">
                <a href="{{ path('adm_admin_create') }}" class="btn btn-flat btn-primary"><i class="fa fa-plus"></i> New Item</a>
            </div>
            <form class="form-inline form-search">
                <div class="form-group">
                    <label for="keyword" class="sr-only">Nama Admin</label>
                    <input type="text" class="form-control" value="{{ keyword }}" name="keyword" placeholder="Nama Admin" data-provide="clearbutton">
                </div>
                <button type="submit" class="btn btn-flat btn-default"><i class="fa fa-search"></i></button>
            </form>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Birthplace</th>
                        <th>Birthdate</th>
                        <th>Username</th>
                        <th>Active</th>
                        <th>Locked</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% set colspan = 9 %}
                    {% for item in subset %}
                        {% set no = ( no | default(pagination.firstNumber) ) + 1 %}
                        <tr>
                            <td>{{ no }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.gender }}</td>
                            <td>{{ item.birthplace }}</td>
                            <td>{{ item.birthdate|date }}</td>
                            <td>{{ item.user.username }}</td>
                            <td>{{ config.yesLabel(item.user.active) }}</td>
                            <td>{{ config.yesLabel(item.user.locked) }}</td>
                            <td>
                                <a href="{{ path('adm_admin_update', {'id': item.id }) }}" class="btn btn-flat btn-xs btn-warning">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a href="{{ path('adm_admin_delete', {'id': item.id }) }}" class="btn btn-flat btn-xs btn-danger" data-action="delete">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="{{ colspan }}">no record</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            {% include 'tools/pagination.html.twig' %}
        </div>
    </div>
{% endblock %}

